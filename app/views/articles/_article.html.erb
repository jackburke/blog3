<%= div_for article do %>
  <h3>
    <%= link_to article.title, article %>
    <% if article.owned_by? current_user %>
    <span class='actions'>
      <%= link_to "Edit", edit_article_path(article) %>
      <%= link_to "Delete", article, :confirm => "Are you really, really sure?", :method => :delete %>
    </span>
    <% end %>
  </h3>
  <!--<%= article.body %>-->
  <%= simple_format article.body %>
<% end %>
